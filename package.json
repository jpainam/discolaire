{
  "name": "discolaire",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @repo/db push",
    "db:studio": "turbo -F @repo/db studio",
    "dev": "turbo dev",
    "dev:next": "turbo watch dev -F @repo/frontend...",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "pnpm lint:ws && prisma generate",
    "lint": "turbo lint",
    "lint:ws": "pnpm dlx sherif@latest"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "prettier": "^3.5.2",
    "turbo": "^2.4.2",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@9.12.3",
  "pnpm": {
    "onlyBuiltDependencies": [
      "bcrypt"
    ]
  },
  "engines": {
    "node": ">=20"
  },
  "prisma": {
    "schema": "packages/db/prisma/schema",
    "seed": "tsx packages/db/src/seed.ts"
  }
}