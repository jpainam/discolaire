{
  "name": "discolaire",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @repo/db push",
    "db:studio": "turbo -F @repo/db studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @repo/frontend...",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "pnpm lint:ws && pnpm run generate",
    "generate": "pnpm --filter @repo/db prisma generate",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "typecheck": "turbo run typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.14.0",
  "engines": {
    "node": ">=22.14.0",
    "pnpm": ">=9.6.0"
  },
  "prisma": {
    "schema": "packages/db/prisma/schema",
    "seed": "ts-node packages/db/src/seed.ts"
  }
}