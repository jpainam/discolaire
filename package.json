{
  "name": "discolaire",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "clean": "git clean -xdf node_modules",
    "clean:workspaces": "turbo run clean",
    "db:push": "turbo -F @repo/db push",
    "db:studio": "turbo -F @repo/db studio",
    "dev": "turbo watch dev --continue",
    "dev:next": "turbo watch dev -F @repo/frontend...",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "postinstall": "pnpm lint:ws && pnpm db:generate",
    "db:generate": "pnpm --filter @repo/db generate",
    "start": "pnpm --filter @repo/frontend start",
    "lint": "turbo run lint --continue -- --cache --cache-location .cache/.eslintcache",
    "lint:fix": "turbo run lint --continue -- --fix --cache --cache-location .cache/.eslintcache",
    "lint:ws": "pnpm dlx sherif@latest",
    "typecheck": "turbo run typecheck",
    "prepare": "husky"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "dotenv": "^17.2.2",
    "husky": "^9.1.7",
    "prettier": "^3.6.2",
    "turbo": "^2.5.6",
    "typescript": "catalog:"
  },
  "packageManager": "pnpm@10.16.1",
  "engines": {
    "node": ">=22.19.0",
    "pnpm": ">=9.15.9"
  }
}