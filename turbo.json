{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ]
    },
    "lint": {
      "dependsOn": [
        "^lint"
      ]
    },
    "typecheck": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".cache/tsbuildinfo.json"
      ]
    },
    "check-types": {
      "dependsOn": [
        "^check-types"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": [
    "POSTGRES_URL",
    "AUTH_REDIRECT_PROXY_URL",
    "AUTH_SECRET",
    "NEXT_PUBLIC_BASE_URL",
    "AWS_S3_REGION",
    "AWS_S3_BUCKET_NAME",
    "MESSAGING_SECRET_KEY",
    "DISCORD_WEBHOOK_URL",
    "PORT",
    "REDIS_URL",
    "DISCOLAIRE_API_KEY",
    "UNKEY_ROOT_KEY",
    "RESEND_API_KEY",
    "REPORTING_URL",
    "SUPER_ADMIN_USERNAME",
    "AWS_S3_SECRET_ACCESS_KEY",
    "AWS_S3_ACCESS_KEY_ID",
    "MESSAGING_SERVICE_URL",
    "REPORT_API_KEY"
  ],
  "globalPassThroughEnv": [
    "NODE_ENV",
    "CI",
    "NEXT_RUNTIME",
    "VERCEL",
    "VERCEL_ENV",
    "VERCEL_URL",
    "npm_lifecycle_event"
  ]
}