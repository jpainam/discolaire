{
  "name": "@repo/api",
  "version": "0.1.0",
  "private": true,
  "license": "MIT",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./src/index.ts"
    },
    "./permission": {
      "types": "./dist/permission.d.ts",
      "default": "./src/permission.ts"
    }
  },
  "scripts": {
    "build": "tsc",
