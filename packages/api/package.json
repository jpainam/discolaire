  "prettier": "@repo/prettier-config",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.645.0",
    "@aws-sdk/s3-presigned-post": "^3.645.0",
    "@aws-sdk/s3-request-presigner": "^3.645.0",
    "@repo/auth": "workspace:*",
    "@repo/db": "workspace:*",
    "@repo/lib": "workspace:*",
    "@repo/validators": "workspace:*",
    "@t3-oss/env-nextjs": "^0.11.1",
    "@trpc/server": "catalog:",
    "cookie": "^0.6.0",
    "superjson": "2.2.1",
    "uuid": "^10.0.0",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@repo/prettier-config": "workspace:*",
    "@repo/tsconfig": "workspace:*",
    "@types/uuid": "^10.0.0",
    "eslint": "catalog:",
    "prettier": "catalog:",
    "typescript": "catalog:"
  }
