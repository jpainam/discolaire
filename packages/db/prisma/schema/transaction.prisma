    allergyAnimals           Boolean  @default(false)
    allergyMedications       Boolean  @default(false)
    allergyNotes             String?
    usesEpiPenAtSchool       Boolean? @default(false)
    hasAsthma                Boolean  @default(false)
    asthmaNotes              String?
