{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "desktop",
  "version": "0.1.0",
  "identifier": "com.discolaire.desktop",
  "build": {
    "beforeDevCommand": "pnpm dev:next",
    "devUrl": "http://localhost:3000",
    "beforeBuildCommand": "pnpm --filter frontend build && pnpm --filter desktop tauri:prepare-ssr",
    "frontendDist": "next/loader"
  },
  "app": {
    "windows": [
      {
        "title": "desktop",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "resources": [
      "next/server/**"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
