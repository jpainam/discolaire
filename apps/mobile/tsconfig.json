{
  "extends": [
    "@repo/tsconfig/base.json"
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": [
        "./*"
      ]
    },
    "jsx": "react-native",
    "types": [
      "nativewind/types"
    ],
    "checkJs": false,
    "moduleSuffixes": [
      ".ios",
      ".android",
      ".native",
      ""
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "*.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "app",
    "types",
    "utils",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}