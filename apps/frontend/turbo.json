{
  "$schema": "https://turborepo.org/schema.json",
  "extends": [
    "//"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "next-env.d.ts"
      ],
      "passThroughEnv": [
        "SENTRY_AUTH_TOKEN"
      ]
    },
    "dev": {
      "persistent": true
    }
  }
}