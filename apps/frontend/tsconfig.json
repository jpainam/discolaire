{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "disableSizeLimit": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "@repo/ui/*": ["../../packages/ui/src/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    ".",
    "next-env.d.ts",
    "next.config.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
